{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
    <ul>
        {% for u in user %}
            <li>
                <b>{{ u.name }}</b>
            </li>

            <li>
                <b> {{ u.firstName }}</b>
            </li>

            <li>
                <b>{{ u.email }}</b>
            </li>

            <form action="/userlist/{{u.id}}" >
                <button type="submit" class="btn-small ">Delete</button>
            </form>
            <hr>

        {% endfor %}
    </ul>
    </div>
</div>
{% endblock %}