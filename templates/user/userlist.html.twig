{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <ul>
        {% for u in user %}
            <li>
                <b>{{ u.name }}</b>
            </li>

            <li>
                <b> {{ u.firstName }}</b>
            </li>

            <li>
                <b>{{ u.email }}</b>
            </li>

            <form action="/user/{{u.id}}" >
                <button type="submit" class="btn-small ">delete</button>
            </form>
            <hr>

        {% endfor %}
    </ul>
{% endblock %}